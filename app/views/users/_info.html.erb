<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr id="relationship_follow">
    <%= render 'relationships/follow_counter', user: user %>
  </tr>
  <tr id="relationship_follower">
    <%= render 'relationships/follower_counter', user: user %>
  </tr>
</table>
