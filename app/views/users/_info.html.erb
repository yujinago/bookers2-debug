<div class='row'>
  <% if current_user != user %>
    <td id="relationship-btn_info">
      <%= render 'relationships/btn', user: user, options: { class: "" } %>
    </td>
  <% else %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>